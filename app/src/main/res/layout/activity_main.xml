<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".MainActivity">

    <!-- Scrollable content area -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150px"
        android:fillViewport="true">

        <!-- VerticalStackLayout equivalent -->
        <LinearLayout
            android:id="@+id/verticalStack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Content stack -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Status text moved here to avoid banner overlap -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:paddingEnd="4dp"
                    android:paddingBottom="4dp">

                    <ImageButton
                        android:id="@+id/menuButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Menu"
                        android:background="@android:color/transparent"
                        android:tint="#FFFFFF"
                        android:src="@drawable/menu" />
                </LinearLayout>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not Connected"
                    android:textSize="18sp"
                    android:textColor="#AAAAAA"
                    android:textAlignment="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <!-- Connect Button -->
                <Button
                    android:id="@+id/connectButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Connect HID Device"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_btn_connect"/>

                <!-- Keypad Grid -->
                <GridLayout
                    android:id="@+id/keypadGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100px"
                    android:columnCount="3"
                    android:rowCount="4"
                    android:alignmentMode="alignBounds"
                    android:columnOrderPreserved="false">

                    <!-- Row 1: 7, 8, 9 -->
                    <Button
                        android:id="@+id/key7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="7"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_keypad"/>

                    <Button
                        android:id="@+id/key8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="8"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_keypad"/>

                    <Button
                        android:id="@+id/key9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="9"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_keypad"/>

                    <!-- Row 2: 4, 5, 6 -->
                    <Button
                        android:id="@+id/key4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="4"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_keypad"/>

                    <Button
                        android:id="@+id/key5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="5"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_key5"/>

                    <Button
                        android:id="@+id/key6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="6"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_keypad"/>

                    <!-- Row 3: 1, 2, 3 -->
                    <Button
                        android:id="@+id/key1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="1"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_keypad"/>

                    <Button
                        android:id="@+id/key2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="2"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_keypad"/>

                    <Button
                        android:id="@+id/key3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="3"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_keypad"/>

                    <!-- Row 4: Backspace, 0, Enter -->
                    <Button
                        android:id="@+id/keyBackspace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="⌫"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_backspace"/>

                    <Button
                        android:id="@+id/key0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="0"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_keypad"/>
    
                    <Button
                        android:id="@+id/keyReturn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="82dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Ent"
                        android:textSize="24sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_enter"/>
                </GridLayout>

                <!-- Up/Down Arrows and Trackpad Toggle Grid -->
                <GridLayout
                    android:id="@+id/updnmsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100px"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignBounds"
                    android:columnOrderPreserved="false">

                    <!-- Up Arrow button -->
                    <Button
                        android:id="@+id/arrowUpButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="72dp"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:text="▲ UP"
                        android:textSize="20sp"
                        android:layout_margin="4dp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_updn"/>

                    <!-- Down Arrow button -->
                    <Button
                        android:id="@+id/arrowDownButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="72dp"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:text="▼ DOWN"
                        android:textSize="20sp"
                        android:layout_margin="4dp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_updn"/>

                    <!-- Trackpad Toggle button -->
                    <Button
                        android:id="@+id/trackpadToggleButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="52dp"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="TRACKPAD"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_trackpad"/>

                     <!-- Num Lock button -->
                    <Button
                        android:id="@+id/numLockButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="52dp"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="NUM LOCK"
                        android:textSize="16sp"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_btn_numlock"/>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Trackpad Overlay (overlays content when visible) -->
    <FrameLayout
        android:id="@+id/trackpadOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/trackpadPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:backgroundTint="@color/status_box"
            android:padding="12dp"
            android:background="@drawable/rounded_panel">

            <TextView
                android:id="@+id/trackpadHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRACKPAD MODE"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="8dp"/>

            <View
                android:id="@+id/trackpadSurface"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_trackpad" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/mouseLeftClick"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:text="LEFT"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_btn_mouse"/>

                <Button
                    android:id="@+id/mouseRightClick"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:text="RIGHT"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_btn_mouse"/>
            </LinearLayout>

            <Button
                android:id="@+id/closeTrackpadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_margin="4dp"
                android:text="Close Trackpad"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:background="@drawable/bg_btn_close_trackpad"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>